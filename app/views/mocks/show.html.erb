<div id="sidebar">
  <div class="module" id="header">
    <h1>MOCKR</h1>
  </div>
  <div class="module" id="mock_header">
    <%= @mock.name %>
  </div>
  <div class="module">
    <form id="add_feedback_form">
      <ul class="clearfix" id="feelings_input_fields">
        <li>
          <input type="radio" id="feeling_happy" name="feeling" value="happy" />
          <label for="feeling_happy"><%= image_tag "happy.gif" %></label>
        </li>
        <li>
          <input type="radio" id="feeling_sad" name="feeling" value="sad" />
          <label for="feeling_sad"><%= image_tag "sad.gif" %></label>
        </li>
      </ul>
      <textarea></textarea>
      <%= image_submit_tag "buttons/add_feedback.gif" %>
    </form>
  </div>
    <ul id="comments_list">
      <% @comments.each do |comment| %>
        <li class="<%= comment.feeling.name %>">
          <span class="time">
            <%= distance_of_time_in_words_to_now comment.created_at %>
          </span>
          <span class="author">
            <%= comment.author.name %> says:
          </span>
          <div class="text">
            <%= comment.text %>
          </div>
          <% if comment.children.any? %>
            <ul id="children_comments_list">
              <% comment.children.each do |child| %>
                <li>
                  <%= child.text %>
                  <div class="meta">
                    <%= child.author.first_name %>,
                    <%= distance_of_time_in_words_to_now child.created_at %>
                  </div>
                </li>
              <% end %>
            </ul>
          <% end %>
        </li>
      <% end %>
    </ul>
</div>

<div id="mock">
  <%= image_tag @mock.image_path %>
</div>
