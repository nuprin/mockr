<%= stylesheet_link_tag "mocks/edit" %>

<% render :layout => "/layouts/minimal" do %>
  <% form_for :mock, @mock, :url => mock_path(@mock),
    :html => {:method => :put} do |f| %>
    <div class="field_row">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>
    <div class="field_row">
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </div>
    <div class="submit_bar">
      <%= link_to "Cancel", mock_url(@mock) %> or
      <%= f.submit "Save Changes" %>
    </div>
  <% end %>
<% end %>
